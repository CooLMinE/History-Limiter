{
  "name": "History Limiter",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Limit or disable the number of history entries that are kept by your browser when you download a file or visit a page.",
  "homepage_url": "http://www.fluxbytes.com",
  "icons": {
    "16": "icons/history_limiter_16.png",
    "48": "icons/history_limiter_48.png",
    "128":"icons/history_limiter_128.png"
  },
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "options_page": "src/options/index.html",
  "permissions": [
    "history",
    "storage",
    "downloads"
  ]
}